@model ProvaWilliam.Models.Especialidade

@{
    ViewBag.Title = "Deletar Especialidades";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Deletar especialidade</h2>

<h3>Realmente quer deletar?</h3>
<div>
    <h4>Especialidade</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.descricao)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.descricao)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Deletar" class = "btn btn-danger btn-sm" /> |
            @Html.ActionLink("Retornar", "Index","", new { @class = "btn btn-primary btn-sm" })
        </div>
    }
</div>
